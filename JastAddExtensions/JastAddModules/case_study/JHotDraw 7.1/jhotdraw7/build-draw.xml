<?xml version="1.0" encoding="UTF-8"?>
<!-- Builds the "JHotDraw Draw" demo application and demo applet. -->
<project name="build-draw" default="all" basedir=".">
    <target name="init">
        <property name="libdir" value="lib"/>
        <property name="srcdir" value="src/main/java"/>
        <property name="builddir" value="build"/>
        <property name="samplesdir" value="guide/samples/draw"/>
        <property name="classdir" value="${builddir}/classes"/>
        <property name="distdir" value="dist/Draw"/>
        <property name="docdir" value="javadoc"/>
        <property name="author" value="jhotdraw.org and contributors"/>
        <property name="version" value="7.1"/>
        <property name="keystore.file" value="../../../../_Keystore/JavaKeystore"/>
        <property name="keystore.alias" value="werner"/>
        <property name="keystore.storepass" value="werner"/>
    </target>
    <target name="clean" depends="init">
        <delete dir="${classdir}" />
    </target>
    <target name="applet.compile" depends="init,clean">
        <mkdir dir="${classdir}"/>
        <javac
                destdir="${classdir}"
                srcdir="${srcdir}"
                debug="false"
                source="1.5"
                target="1.5"
                optimize="true"
                encoding="UTF-8"
         >
            <classpath path="${libdir}/java_30.zip"/>
            <include name="org/jhotdraw/samples/draw/DrawApplet.java"/> 
            <include name="org/jhotdraw/samples/draw/DrawLiveConnectApplet.java"/> 
            <include name="net/n3/nanoxml/*.java"/> 
        </javac>
        <copy todir="${classdir}/org/jhotdraw/app/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/app/action/images" >
                <include name="edit*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/draw/action/images" />
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/draw/action/images" />
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo">
            <fileset dir="${srcdir}/org/jhotdraw/undo">
                <include name="*.properties"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo/images">
            <fileset dir="${srcdir}/org/jhotdraw/undo/images">
                <include name="*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw">
            <fileset file="${srcdir}/org/jhotdraw/draw/Label*.properties"/>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/app">
            <fileset file="${srcdir}/org/jhotdraw/app/Label*.properties"/>
        </copy>
    </target>
    <target name="applet.jar" depends="init,applet.compile">
        <mkdir dir="${distdir}"/>
        <jar destfile="${distdir}/jhotdraw_draw.jar" basedir="${classdir}"
        index="true" compress="false">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.draw.DrawApplet"/>
                <attribute name="Implementation-Version" value="${version}"/>
            </manifest>
        </jar>
        <exec executable="pack200">
            <arg value="${distdir}/jhotdraw_draw.jar.pack.gz"/>
            <arg value="${distdir}/jhotdraw_draw.jar"/>
        </exec>
    </target>
    <target name="applet.jarsigned" depends="init,applet.jar">
        <copy tofile="${distdir}/jhotdraw_draw_signed.jar">
            <fileset file="${distdir}/jhotdraw_draw.jar"/>
        </copy>
          <signjar alias="${keystore.alias}" 
                storepass="${keystore.storepass}"
                keystore="${keystore.file}" 
                jar="${distdir}/jhotdraw_draw_signed.jar"
                >
        </signjar>        
        <exec executable="pack200">
            <arg value="${distdir}/jhotdraw_draw_signed.jar.pack.gz"/>
            <arg value="${distdir}/jhotdraw_draw_signed.jar"/>
        </exec>
    </target>
    <target name="application.compile" depends="init,clean">
        <mkdir dir="${classdir}"/>
        <javac
                destdir="${classdir}"
                srcdir="${srcdir}"
                debug="true"
                source="1.5"
                optimize="true"
                encoding="UTF-8"
         >
            <classpath path="${libdir}/quaqua.jar"/>
            <classpath path="${libdir}/MRJAdapter.jar"/>
            <classpath path="${libdir}/java_30.zip"/>
            <include name="net/n3/nanoxml/*.java"/> 
            <include name="org/jhotdraw/samples/draw/Main.java"/> 
            <include name="org/jhotdraw/samples/draw/DrawProject.java"/> 
        </javac>
        <copy todir="${classdir}/org/jhotdraw/app/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/app/action/images" />
        </copy>
        <copy todir="${classdir}/org/jhotdraw/app">
            <fileset dir="${srcdir}/org/jhotdraw/app">
                <include name="*.properties"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw/action/images">
            <fileset dir="${srcdir}/org/jhotdraw/draw/action/images" />
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo">
            <fileset dir="${srcdir}/org/jhotdraw/undo">
                <include name="*.properties"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/undo/images">
            <fileset dir="${srcdir}/org/jhotdraw/undo/images">
                <include name="*.png"/>
            </fileset>
        </copy>
        <copy todir="${classdir}/org/jhotdraw/draw">
            <fileset file="${srcdir}/org/jhotdraw/draw/Label*.properties"/>
        </copy> 
        <copy todir="${classdir}/org/jhotdraw/app">
            <fileset file="${srcdir}/org/jhotdraw/app/Label*.properties"/>
        </copy>
    </target>
    <target name="application.jar" depends="init,application.compile">
        <mkdir dir="${distdir}"/>
        <jar destfile="${distdir}/JHotDraw Draw.jar" basedir="${classdir}">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.draw.Main"/>
                <attribute name="Class-Path" value="quaqua.jar lib/quaqua.jar ../lib/quaqua.jar ../../lib/quaqua.jar MRJAdapter.jar lib/MRJAdapter.jar ../lib/MRJAdapter.jar ../../lib/MRJAdapter.jar"/>
                <attribute name="Implementation-Version" value="${version}"/>
            </manifest>
        </jar>
        <copy todir="${distdir}">
            <fileset file="${libdir}/*.jnilib"/>
        </copy>
    </target>
    <target name="application.jarsigned" depends="init,application.jar">
        <unjar src="${libdir}/quaqua.jar" dest="${classdir}" />
        <unjar src="${libdir}/MRJAdapter.jar" dest="${classdir}" />
        <jar destfile="${distdir}/JHotDraw Draw_signed.jar" basedir="${classdir}">
            <manifest>
                <attribute name="Built-By" value="${author}"/>
                <attribute name="Main-Class" value="org.jhotdraw.samples.draw.Main"/>
               <attribute name="Implementation-Version" value="${version}"/>
             </manifest>
        </jar>
          <signjar alias="${keystore.alias}" 
                storepass="${keystore.storepass}"
                keystore="${keystore.file}" 
                jar="${distdir}/JHotDraw Draw_signed.jar"
                
                >
        </signjar>        
        <jar basedir="${libdir}" compress="true"
             jarfile="${distdir}/libquaqua.jnilib_signed.jar" 
        >
            <include name="libquaqua.jnilib"/>
        </jar>
      <signjar alias="${keystore.alias}" 
            storepass="${keystore.storepass}"
            keystore="${keystore.file}" 
            jar="${distdir}/libquaqua.jnilib_signed.jar"

            >
        </signjar>        
    </target>
    <target name="application.run-jar" depends="init">
        <java fork="true" jar="${distdir}/JHotDraw Draw.jar">
            <jvmarg value="-Xdock:name=JHotDraw Draw"/>
            <jvmarg value="-Dlocale=en"/>
            <jvmarg value="-Dapple.awt.graphics.UseQuartz=false"/>
            <jvmarg value="-Djava.library.path=${libdir}"/>
        </java>
    </target>
    <target name="application.run-compiled" depends="init,application.compile">
        <java fork="true" classname="org.jhotdraw.samples.draw.Main">
            <classpath>
                <pathelement path="${classdir}"/>
                <pathelement path="${libdir}/quaqua.jar"/>
                <pathelement path="${libdir}/MRJAdapter.jar"/>
                <pathelement path="${libdir}/java_30.zip"/>
                <pathelement path="${libdir}/appframework-0.42.jar"/>
            </classpath>
            <jvmarg value="-Xdock:name=JHotDraw Draw"/>
            <jvmarg value="-Dlocale=en"/>
            <jvmarg value="-Dapple.awt.graphics.UseQuartz=false"/>
            <jvmarg value="-Djava.library.path=${libdir}"/>
        </java>
    </target>
    <target name="applet.run-compiled" depends="init">
        <java classpath="${classdir}" classname="org.jhotdraw.samples.draw.DrawApplet">
        </java>
    </target>
    <target name="applet.run-jar" depends="init">
        <java fork="true" jar="${distdir}/jhotdraw_draw.jar">
        </java>
    </target>
    <target name="applet.appletviewer" depends="init">
        <exec executable="appletviewer">
        <arg value="${classdir}/DrawLiveConnectApplet.html"/>
        </exec>
    </target>
    <target name="release" depends="init,applet.jar,application.jarsigned">
        <copy todir="${samplesdir}/applet">
            <fileset dir="${distdir}" >
                <include name="jhotdraw_draw.*"/>
             </fileset>
        </copy>
        <copy todir="${samplesdir}/webstart">
            <fileset dir="${distdir}" >
                <include name="JHotDraw Draw.jar"/>
             </fileset>
        </copy>
        <copy todir="${samplesdir}/webstart">
            <fileset dir="${libdir}" >
                <include name="libquaqua.jnilib"/>
             </fileset>
        </copy>
    </target>
</project>
